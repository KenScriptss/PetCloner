-- Services
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- Cleanup existing GUI
local GUI_NAME = "KenHub"
if PlayerGui:FindFirstChild(GUI_NAME) then
	PlayerGui[GUI_NAME]:Destroy()
end

-- GUI Setup
local screenGui = Instance.new("ScreenGui", PlayerGui)
screenGui.Name = GUI_NAME
screenGui.ResetOnSpawn = false

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 360, 0, 280)
mainFrame.Position = UDim2.new(0.5, -180, 0.5, -140)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 12)
Instance.new("UIStroke", mainFrame).Color = Color3.fromRGB(255, 0, 50)

-- Close Button
local closeBtn = Instance.new("TextButton", mainFrame)
closeBtn.Size = UDim2.new(0, 28, 0, 28)
closeBtn.Position = UDim2.new(1, -34, 0, 6)
closeBtn.BackgroundColor3 = Color3.fromRGB(255, 60, 60)
closeBtn.Text = "‚úï"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.TextColor3 = Color3.new(1, 1, 1)
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(0, 6)
closeBtn.MouseButton1Click:Connect(function()
	mainFrame:Destroy()
end)

local function makeLabel(text, size, posY)
	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, -40, 0, size)
	label.Position = UDim2.new(0.5, 0, 0, posY)
	label.AnchorPoint = Vector2.new(0.5, 0)
	label.BackgroundTransparency = 1
	label.Font = Enum.Font.GothamBold
	label.TextSize = size - 4
	label.TextColor3 = Color3.fromRGB(255, 90, 90)
	label.Text = text
	label.TextWrapped = true
	label.Parent = mainFrame
	return label
end

makeLabel("‚ò†Ô∏è Ken Hub", 30, 10)

local footer = makeLabel("", 20, 258)
footer.TextColor3 = Color3.fromRGB(200, 120, 120)

local selector = Instance.new("Frame", mainFrame)
selector.Size = UDim2.new(1, -40, 0, 110)
selector.Position = UDim2.new(0.5, 0, 0.35, 0)
selector.AnchorPoint = Vector2.new(0.5, 0)
selector.BackgroundTransparency = 1

local selLayout = Instance.new("UIListLayout", selector)
selLayout.Padding = UDim.new(0, 8)
selLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
selLayout.SortOrder = Enum.SortOrder.LayoutOrder
selector.Parent = mainFrame

local function makeBtn(text)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, 0, 0, 32)
	btn.BackgroundColor3 = Color3.fromRGB(60, 0, 0)
	btn.Text = text
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 16
	btn.TextColor3 = Color3.new(1, 1, 1)
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
	btn.Parent = selector
	return btn
end

local petBtn = makeBtn("üêæ Pet Cloner")
local seedBtn = makeBtn("üå± Seed Spawner")
local eggBtn = makeBtn("ü•ö Egg Spawner")

local activatingText = makeLabel("", 26, 70)
activatingText.TextColor3 = Color3.fromRGB(255, 255, 255)
activatingText.Visible = false

local subText = makeLabel("", 18, 102)
subText.TextColor3 = Color3.fromRGB(180, 180, 180)
subText.Visible = false

local backBtn = Instance.new("TextButton", mainFrame)
backBtn.Size = UDim2.new(0, 60, 0, 24)
backBtn.Position = UDim2.new(0, 6, 0, 6)
backBtn.BackgroundColor3 = Color3.fromRGB(80, 0, 0)
backBtn.Text = "‚Üê Back"
backBtn.Font = Enum.Font.GothamBold
backBtn.TextSize = 14
backBtn.TextColor3 = Color3.new(1,1,1)
Instance.new("UICorner", backBtn).CornerRadius = UDim.new(0, 6)
backBtn.Visible = false

-- Fake Activate Function
local function activate(mode)
	selector.Visible = false
	activatingText.Text = "üîé Initializing spawn access..."
	subText.Text = (mode == "pet" and "Please wait while we prepare your cloner.") or "Please wait while we prepare your spawner."
	activatingText.Visible = true
	subText.Visible = true

	task.spawn(function()
		for i = 1, 180 do
			activatingText.Text = "üîé Initializing spawn access" .. string.rep(".", (i % 4))
			task.wait(1)
		end

		-- Always fails
		activatingText.Text = "‚ùå Failed: Can't find valuable pets to dupe."
		subText.Text = "Please try again later, or check your connection."

		-- Wait 15 sec then go back
		task.wait(15)
		activatingText.Visible = false
		subText.Visible = false
		selector.Visible = true
		footer.Text = "‚ùå Access denied. Please try again later."
	end)
end

petBtn.MouseButton1Click:Connect(function() activate("pet") end)
seedBtn.MouseButton1Click:Connect(function() activate("seed") end)
eggBtn.MouseButton1Click:Connect(function() activate("egg") end)

backBtn.MouseButton1Click:Connect(function()
	backBtn.Visible = false
	selector.Visible = true
	footer.Text = ""
end)
